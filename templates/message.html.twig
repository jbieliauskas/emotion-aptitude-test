{% set name = "#{message.first_name} #{message.last_name}" %}

<li>
    <span>{{ message.created_at }}</span>
    {% if message.email is not null %}
        <a href="mailto:{{ message.email }}">{{ name }}</a>,
    {% else %}
        {{ name }},
    {% endif %}
    75 m.
    <br/>
    {{ message.content }}
</li>
